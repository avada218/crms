<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xmu.crms.mapper.StudentScoreGroupMapper">

    <resultMap id="studentScoreGroupResultMap" type="StudentScoreGroup">
        <id property="id" column="id"/>
        <result property="grade" column="grade"/>
        <association property="student" column="student_id" select="CommonMapper.selectUser"/>
        <association property="seminarGroupTopic" column="seminar_group_topic_id" select="xmu.crms.mapper.SeminarGroupTopicMapper.getById"/>
    </resultMap>

    <select id="getById" resultMap="studentScoreGroupResultMap">
        SELECT * FROM student_score_group WHERE id=#{id}
    </select>
</mapper>